     <div class="emoBtn">
      <!-- button for happy -->
      
      <button type="button" class="btn btn-outline-primary" id="happy-btn">Happy</button>
      
      <!-- button for neutral -->
      
      <button type="button" class="btn btn-outline-primary" id="neutral-btn">Neutral</button>
      
