    <!-- emojis container -->
    <div class="containerE" id="happy-emoji-container">
      <button class="x-button"><i class="fas fa-times"></i></button><br>
        {{#each positivePolarityEmojis}}
            <span class="emoji-info" data-id="{{id}}" data-name={{name}}>{{emoji}}</span>
        {{/each}}
    </div>


    <div class="containerE" id="neutral-emoji-container">
      <button class="x-button"><i class="fas fa-times"></i></button><br>
        {{#each neutralPolarityEmojis}}
            <span class="emoji-info" data-id="{{id}}" data-name={{name}}>{{emoji}}</span>
        {{/each}}
    </div>

  
  <div class="containerE" id="sad-emoji-container">
    <button class="x-button"><i class="fas fa-times"></i></button><br>
      {{#each negativePolarityEmojis}}
          <span class="emoji-info" data-id="{{id}}" data-name={{name}}>{{emoji}}</span>
      {{/each}}
  </div>

</div>


